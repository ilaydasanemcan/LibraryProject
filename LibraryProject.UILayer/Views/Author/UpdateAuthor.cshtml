@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Yazar Gümcelleme</h4>
            <br />
            <form class="form-horizontal form-material" method="post">
                <div class="form-group">
                    <label class="col-md-12">Yazar Adı</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-line" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Yazar Yaş</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-line" asp-for="Age">
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Yazar Mail</label>
                    <div class="col-md-12">
                        <input type="email" class="form-control form-control-line" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Yazar Açıklama</label>
                    <div class="col-md-12">
                        <textarea rows="5" class="form-control form-control-line" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-success">Yazarı Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

