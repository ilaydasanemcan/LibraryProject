@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Kategori Ekleme</h4>
            <br />
            <form class="form-horizontal form-material" method="post">
                <div class="form-group">
                    <label class="col-md-12">Kategori Adı</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-line" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-success">Yeni Kategori Girişi</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
